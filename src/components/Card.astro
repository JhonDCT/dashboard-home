---
import Home from "./Home.astro";
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;

const colors = ["bg-[#fac1d9]", "bg-[#cfdddb]", "bg-[#e4cded]", "bg-[#e5dade]"];
const colorSelected =
  colors[Math.round(Math.random() * colors.length - 1)] ?? colors[0];
---

<li
  class:list={[colorSelected]}
  class="active:w-56 active:h-56 transition-all duration-150 rounded-2xl w-60 h-60 p-6"
>
  <a href={href} target="_blank" class="h-full flex flex-col justify-between">
    <Home />
    <h2 class="text-3xl text-[#111315]">
      <strong>{title}</strong>
    </h2>
  </a>
</li>
